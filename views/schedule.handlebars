<h2>Schedule</h2>
<form method="post">
	<input type="hidden" name="add" value="1">
	<fieldset>
		<legend>Add Item</legend>
		<table>
			<tr>
				<th style="width: 10%;">Day</th>
				<th style="width: 5%;">Hour</th>
				<th style="width: 5%;">Minute</th>
				<th style="width: 5%;">Length</th>
				<th style="width: 75%;">Game</th>
			</tr>
			<tr>
				<td>
					<select name="day">
						<option value="0">Sunday</option>
						<option value="1">Monday</option>
						<option value="2">Tuesday</option>
						<option value="3">Wednesday</option>
						<option value="4">Thursday</option>
						<option value="5">Friday</option>
						<option value="6">Saturday</option>
					</select>
				</td>
				<td><input type="number" name="hour" min="0" max="23" value="0"></td>
				<td><input type="number" name="minute" min="0" max="59" value="0"></td>
				<td><input type="number" name="length" min="1" value="1"></td>
				<td><input type="text" name="game"></td>
			</tr>
		</table>
		<fieldset class="buttons">
			<input type="submit" value="Add">
		</fieldset>
	</fieldset>
</form>
<form method="post">
	<fieldset>
		<legend>Edit Schedule</legend>
		<table>
			<tr>
				<th style="width: 10%;">Day</th>
				<th style="width: 5%;">Hour</th>
				<th style="width: 5%;">Minute</th>
				<th style="width: 5%;">Length</th>
				<th style="width: 71%;">Game</th>
				<th style="width: 4%;">Delete</th>
			</tr>
			{{#each data.schedule}}
			<tr>
				<td>
					<input type="hidden" name="update[{{this.id}}][id]" value="{{this.id}}">
					<select name="update[{{this.id}}][day]">
						<option value="0"{{#eq this.day 0}} selected{{/eq}}>Sunday</option>
						<option value="1"{{#eq this.day 1}} selected{{/eq}}>Monday</option>
						<option value="2"{{#eq this.day 2}} selected{{/eq}}>Tuesday</option>
						<option value="3"{{#eq this.day 3}} selected{{/eq}}>Wednesday</option>
						<option value="4"{{#eq this.day 4}} selected{{/eq}}>Thursday</option>
						<option value="5"{{#eq this.day 5}} selected{{/eq}}>Friday</option>
						<option value="6"{{#eq this.day 6}} selected{{/eq}}>Saturday</option>
					</select>
				</td>
				<td><input type="number" name="update[{{this.id}}][hour]" value="{{this.hour}}" min="0" max="23"></td>
				<td><input type="number" name="update[{{this.id}}][minute]" value="{{this.minute}}" min="0" max="59"></td>
				<td><input type="number" name="update[{{this.id}}][length]" value="{{this.length}}" min="1"></td>
				<td><input type="text" name="update[{{this.id}}][game]" value="{{this.game}}"></td>
				<td><input type="checkbox" name="delete[i{{this.id}}]"></td>
			</tr>
			{{/each}}
		</table>
		<fieldset class="buttons">
			<input type="reset" value="Reset">
			<input type="submit" value="Save">
		</fieldset>
	</fieldset>
</form>
