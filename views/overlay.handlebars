<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="overlay.css">
	<title>Stevelabs Overlay</title>
</head>
<body style="display: none;">
	{{#if chat}}
	<fieldset id="chat-container">
		<legend>Chat</legend>
		<div id="chat-window">
			<div id="chat">
			{{#each chathistory}}
				<div>
					<span class="chatname" style="color: {{this.color}};">{{this.username}}: </span>
					<span class="chatmessage">{{{this.message}}}</span>
				</div>
			{{/each}}
			</div>
		</div>
	</fieldset>
	{{/if}}
	{{#if countdown}}
	<div id="countdown"></div>
	{{#if countdown_audio}}
	<audio src="media/{{countdown_audio}}" id="music" loop></audio>
	{{/if}}
	{{/if}}
	{{#if nextstream}}
	<div id="nextstream"></div>
	{{/if}}
	{{#if tips}}
	<div id="loading">
		<div id="loadingtext">Loading</div>
		<img src="loading.png">
		<div id="tips"></div>
	</div>
	{{/if}}
	{{#if trivia}}
	<fieldset id="trivia-container">
		<legend>Trivia</legend>
		<div id="trivia">{{triviaquestion}}</div>
	</fieldset>
	{{/if}}
	{{#each alerts}}
	<div class="alert" id="{{@key}}">
		{{#eq @key 'greet'}}
		<img>
		{{/eq}}
		{{#eq @key 'shoutout'}}
		<img>
		{{/eq}}
		{{#if this.video}}
		<video src="media/{{this.video}}"></video>
		{{/if}}
		{{#if this.image}}
		<img src="media/{{this.image}}">
		{{/if}}
		<p>{{{this.message}}}</p>
		{{#if this.sound}}
		<audio src="media/{{this.sound}}"></audio>
		{{/if}}
	</div>
	{{/each}}
	{{#each sfx}}
	<audio id="sfx_{{@key}}" src="media/{{this.file}}"></audio>
	{{/each}}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.slim.js"></script>
	<script>const config = {{{config}}};</script>
	<script src="overlay.js"></script>
</body>
</html>
